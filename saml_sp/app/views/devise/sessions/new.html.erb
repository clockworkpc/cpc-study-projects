<% @show_header = false %>

<div class="full-page-background--authentication" style="height: 100%; width: 100%; display: flex; align-items:center; justify-content: center">
  <div class="bg-white pt-10 pb-16 px-16 rounded-lg shadow-2xl auth-card">
    <h2 class="text-2xl py-4 pb-6 font-semibold text-center">Sign in</h2>


    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field text-sm mb-3">
        <%= f.label :email, class: "text-gray-700" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full px-3 py-2 border border-solid rounded border-gray-400 focus:border-blue-500' %>
      </div>

      <div class="field text-sm mb-3">
        <%= f.label :password, class: "text-gray-700" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-3 py-2 border border-solid rounded border-gray-400 focus:border-blue-500" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field text-gray-700 text-sm my-2 mt-4">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions py-3">
        <%= f.submit "Log in", class: 'button button-primary w-full' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
